# AMMINA Platform Environment Variables
# Copy this file to .env and fill in your actual values for local development
# For Render deployment, set these in the Render Dashboard instead

# ==============================================================================
# REQUIRED - Application will not start without these
# ==============================================================================

# MongoDB Connection (REQUIRED)
# Get this from MongoDB Atlas: https://www.mongodb.com/cloud/atlas
# Format: mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/

# MongoDB Database Name (Optional - defaults to ammina_platform)
MONGODB_DB_NAME=ammina_platform

# OpenAI API Key (REQUIRED)
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Flask Secret Key (REQUIRED for sessions)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here_generate_a_random_string

# Admin Registration Key (REQUIRED for creating admin accounts)
# Create your own secure key - users need this to register as admins
ADMIN_REGISTRATION_KEY=your_secure_admin_key_here

# ==============================================================================
# Flask Configuration
# ==============================================================================

# Environment mode: development or production
FLASK_ENV=development

# Debug mode: True or False
FLASK_DEBUG=True

# Server Port (automatically set by Render, but can override for local dev)
PORT=5000

# ==============================================================================
# Session Configuration (Production)
# ==============================================================================

# Use secure cookies (set to True in production with HTTPS)
SESSION_COOKIE_SECURE=False

# Prevent JavaScript access to session cookie
SESSION_COOKIE_HTTPONLY=True

# CSRF protection for cookies
SESSION_COOKIE_SAMESITE=Lax

# Session timeout in seconds (default: 7 days)
PERMANENT_SESSION_LIFETIME=604800

# ==============================================================================
# File Upload Configuration
# ==============================================================================

# Maximum file upload size in bytes (default: 100MB)
MAX_CONTENT_LENGTH=104857600

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=csv,xlsx,xls,json

# ==============================================================================
# Application Limits
# ==============================================================================

# Maximum rows to process in uploaded datasets
MAX_ROWS=1000000

# Maximum columns to process in uploaded datasets
MAX_COLUMNS=1000

# Query timeout in seconds
QUERY_TIMEOUT=300

# Rate limiting: max queries per minute per user
MAX_QUERIES_PER_MINUTE=10

# Maximum datasets per user
MAX_DATASETS_PER_USER=50

# ==============================================================================
# CORS Configuration
# ==============================================================================

# Allowed CORS origins (comma-separated or * for all)
# In production, set to your specific domain(s)
CORS_ORIGINS=*

# ==============================================================================
# Logging Configuration
# ==============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ==============================================================================
# PandasAI Configuration
# ==============================================================================

# Model to use for natural language queries (default: gpt-4o-mini)
PANDASAI_MODEL=gpt-4o-mini

# Temperature for AI responses (0.0 to 1.0)
PANDASAI_TEMPERATURE=0.0

# ==============================================================================
# Feature Flags (Optional)
# ==============================================================================

# Enable/disable features
ENABLE_USER_REGISTRATION=True
ENABLE_QUERY_HISTORY=True
ENABLE_DATA_VISUALIZATION=True
