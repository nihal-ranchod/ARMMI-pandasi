# AMMINA Platform Environment Configuration
# Copy this file to .env and update the values

# ==============================================
# MONGODB CONFIGURATION (Required)
# ==============================================
# MongoDB Atlas (cloud) - replace with your connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=AppName
MONGODB_DB_NAME=ammina_platform

# Local MongoDB (alternative)
# MONGODB_URI=mongodb://localhost:27017/ammina_platform

# ==============================================
# OPENAI CONFIGURATION (Required)
# ==============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ==============================================
# FLASK CONFIGURATION
# ==============================================
SECRET_KEY=your-secret-key-for-sessions-change-in-production
FLASK_ENV=development  # Use 'production' for production deployment
FLASK_DEBUG=True  # Set to False in production

# ==============================================
# ADMIN SECURITY CONFIGURATION
# ==============================================
# This key is required to create admin accounts - keep it secure!
# Generate a secure key using: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
ADMIN_REGISTRATION_KEY=your-secure-admin-registration-key-here

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
# Maximum file upload size in bytes (100MB)
MAX_CONTENT_LENGTH=104857600
UPLOAD_FOLDER=uploads

# Application Limits
MAX_ROWS=1000000
MAX_COLUMNS=1000
MAX_QUERY_LENGTH=10000
QUERY_TIMEOUT=300

# ==============================================
# SESSION & SECURITY CONFIGURATION
# ==============================================
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
SESSION_PERMANENT=False

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000
# For production:
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ==============================================
# DEVELOPMENT CONFIGURATION (Optional)
# ==============================================
DEV_MODE=True
LOG_LEVEL=INFO
MONGODB_CONNECT_TIMEOUT=10
MONGODB_SERVER_SELECTION_TIMEOUT=5

# ==============================================
# PRODUCTION SECURITY (Uncomment for production)
# ==============================================
# Content Security Policy
# CSP_DEFAULT_SRC='self'
# CSP_SCRIPT_SRC='self' 'unsafe-inline' https://cdn.plot.ly
# CSP_STYLE_SRC='self' 'unsafe-inline' https://cdnjs.cloudflare.com https://fonts.googleapis.com
# CSP_FONT_SRC='self' https://fonts.gstatic.com https://cdnjs.cloudflare.com
# CSP_IMG_SRC='self' data: